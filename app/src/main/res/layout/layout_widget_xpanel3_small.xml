<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="top|center_vertical|center_horizontal|center"
    android:layoutDirection="ltr">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/img_xpanel_large_3_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iv_background"
            android:layout_alignTop="@+id/iv_background"
            android:layout_alignEnd="@+id/iv_background"
            android:layout_alignBottom="@+id/iv_background"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.2"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4.7"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4.5"
                            android:src="@drawable/ic_xpanel_medium_2_wifi" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4.5"
                            android:src="@drawable/ic_xpanel_medium_2_bluetooth" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4.7"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4.5"
                            android:src="@drawable/ic_xpanel_medium_2_mobiledata" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4.5"
                            android:src="@drawable/ic_xpanel_medium_2_flashlight" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.5"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:id="@+id/LlSmallClock"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.7"
                    android:background="@drawable/ic_xpanel_medium_2_bg_box">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4.5"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextClock
                                    android:id="@+id/TClockHr"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8"
                                    android:autoSizeMaxTextSize="@dimen/_28ssp"
                                    android:autoSizeMinTextSize="@dimen/_4ssp"
                                    android:autoSizeTextType="uniform"
                                    android:ellipsize="none"
                                    android:format12Hour="h"
                                    android:format24Hour="h"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:singleLine="true"
                                    android:text="10"
                                    android:textColor="@color/white"
                                    android:textDirection="ltr"
                                    android:textSize="@dimen/_22ssp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.2"
                                    android:gravity="center"
                                    android:text=":"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_18sdp"
                                    android:textStyle="bold" />

                                <TextClock
                                    android:id="@+id/TClockMin"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8"
                                    android:autoSizeMaxTextSize="@dimen/_28ssp"
                                    android:autoSizeMinTextSize="@dimen/_4ssp"
                                    android:autoSizeTextType="uniform"
                                    android:ellipsize="none"
                                    android:format12Hour="h"
                                    android:format24Hour="h"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:singleLine="true"
                                    android:text="10"
                                    android:textColor="@color/white"
                                    android:textDirection="ltr"
                                    android:textSize="@dimen/_22ssp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.33" />
                            <TextClock
                                android:id="@+id/TClockAMPM"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:autoSizeMaxTextSize="@dimen/_20ssp"
                                android:autoSizeMinTextSize="@dimen/_2ssp"
                                android:autoSizeTextType="uniform"
                                android:ellipsize="none"
                                android:format12Hour="EEEE"
                                android:format24Hour="EEEE"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:singleLine="true"
                                android:text="October"
                                android:textColor="@color/white"
                                android:textDirection="ltr"
                                android:textSize="@dimen/_8ssp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4.5">

                        <ProgressBar
                            android:id="@+id/progress_bar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/line_shape"
                            android:progress="50"
                            android:progressDrawable="@drawable/line_progress_bar"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4.5"
                        android:background="@drawable/shape_app_widget_ffffff_r25_bg"
                        android:weightSum="5">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_weight="1.8"
                            android:background="@drawable/icon_drawable"
                            android:backgroundTint="@color/color_0263FF"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/ic_cellular" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.8"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="5">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:gravity="center|bottom|start"
                                android:text="Cellular"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5"
                                android:alpha="0.6"
                                android:gravity="center|top|start"
                                android:text="On"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
