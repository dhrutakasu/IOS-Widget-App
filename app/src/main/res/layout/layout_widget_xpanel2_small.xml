<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="top|center_vertical|center_horizontal|center"
    android:layoutDirection="ltr">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/shape_app_widget_dadeff_r25_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iv_background"
            android:layout_alignTop="@+id/iv_background"
            android:layout_alignEnd="@+id/iv_background"
            android:layout_alignBottom="@+id/iv_background"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.5"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:background="@drawable/shape_app_widget_dadeff_r25_bg"
                    android:backgroundTint="@color/color_0263FF">

                    <LinearLayout
                        android:id="@+id/LlSmallBattery"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4.5"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="0.4"
                                    android:background="@drawable/bg_drawable"
                                    android:src="@drawable/ic_battery_charging" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.4"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:text="Battery"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:alpha="0.6"
                                        android:gravity="center_vertical"
                                        android:text="Charging"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10sdp"
                                        android:textStyle="bold" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:gravity="center|bottom">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="9.5">

                                    <ProgressBar
                                        android:id="@+id/progressBar"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:minHeight="@dimen/_25sdp"
                                        android:progress="80"
                                        android:progressDrawable="@drawable/progressbar_drawable"
                                        android:progressTint="@color/white" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignStart="@id/progressBar"
                                        android:layout_alignTop="@id/progressBar"
                                        android:layout_alignEnd="@id/progressBar"
                                        android:layout_alignBottom="@id/progressBar"
                                        android:gravity="end"
                                        android:orientation="horizontal"
                                        android:weightSum="10">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="end"
                                            android:layout_weight="2.5"
                                            android:gravity="end|center_vertical"
                                            android:paddingEnd="@dimen/_10sdp"
                                            android:text="80%"
                                            android:textColor="@color/color_80000000"
                                            android:textSize="@dimen/_8sdp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33" />

                <LinearLayout
                    android:id="@+id/LlSmallStorage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:background="@drawable/shape_app_widget_dadeff_r25_bg"
                    android:backgroundTint="@color/red"
                    android:gravity="center"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4.5"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_5sdp"
                                android:layout_weight="0.4"
                                android:background="@drawable/bg_drawable"
                                android:src="@drawable/ic_battery_charging" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.4"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="Battery"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:alpha="0.6"
                                    android:gravity="center_vertical"
                                    android:text="Charging"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:gravity="center|bottom">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="9.5">

                                <ProgressBar
                                    android:id="@+id/progressBar_storage"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minHeight="@dimen/_25sdp"
                                    android:progress="80"
                                    android:progressDrawable="@drawable/progressbar_drawable"
                                    android:progressTint="@color/white" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignStart="@id/progressBar_storage"
                                    android:layout_alignTop="@id/progressBar_storage"
                                    android:layout_alignEnd="@id/progressBar_storage"
                                    android:layout_alignBottom="@id/progressBar_storage"
                                    android:gravity="end"
                                    android:orientation="horizontal"
                                    android:weightSum="10">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="end"
                                        android:layout_weight="2.5"
                                        android:gravity="end|center_vertical"
                                        android:paddingEnd="@dimen/_10sdp"
                                        android:text="80%"
                                        android:textColor="@color/color_80000000"
                                        android:textSize="@dimen/_8sdp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.5"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:id="@+id/LlSmallClock"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:background="@drawable/img_xpanel2_datetime_small">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4.5"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="5">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextClock
                                    android:id="@+id/TClockDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:autoSizeMaxTextSize="@dimen/_30ssp"
                                    android:autoSizeMinTextSize="@dimen/_4ssp"
                                    android:autoSizeTextType="uniform"
                                    android:ellipsize="none"
                                    android:format12Hour="d"
                                    android:format24Hour="d"
                                    android:includeFontPadding="false"
                                    android:singleLine="true"
                                    android:text="26"
                                    android:textColor="@color/white"
                                    android:textDirection="ltr"
                                    android:textSize="@dimen/_30ssp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="th"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <TextClock
                                android:id="@+id/TClockAMPM"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:alpha="0.6"
                                android:autoSizeMaxTextSize="@dimen/_16ssp"
                                android:autoSizeMinTextSize="@dimen/_2ssp"
                                android:autoSizeTextType="uniform"
                                android:ellipsize="none"
                                android:format12Hour="MMMM yyyy"
                                android:format24Hour="MMMM yyyy"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:singleLine="true"
                                android:text="October 2022"
                                android:textColor="@color/white"
                                android:textDirection="ltr"
                                android:textSize="@dimen/_8ssp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.33" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextClock
                                    android:id="@+id/TClockHr"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8"
                                    android:autoSizeMaxTextSize="@dimen/_22ssp"
                                    android:autoSizeMinTextSize="@dimen/_4ssp"
                                    android:autoSizeTextType="uniform"
                                    android:background="@drawable/bg_drawable"
                                    android:ellipsize="none"
                                    android:format12Hour="h"
                                    android:format24Hour="h"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:singleLine="true"
                                    android:text="10"
                                    android:textColor="@color/white"
                                    android:textDirection="ltr"
                                    android:textSize="@dimen/_22ssp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.2"
                                    android:gravity="center"
                                    android:text=":"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold" />
                                <TextClock
                                    android:id="@+id/TClockMin"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8"
                                    android:autoSizeMaxTextSize="@dimen/_22ssp"
                                    android:autoSizeMinTextSize="@dimen/_4ssp"
                                    android:autoSizeTextType="uniform"
                                    android:background="@drawable/bg_drawable"
                                    android:ellipsize="none"
                                    android:format12Hour="h"
                                    android:format24Hour="h"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:singleLine="true"
                                    android:text="10"
                                    android:textColor="@color/white"
                                    android:textDirection="ltr"
                                    android:textSize="@dimen/_22ssp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4.5"
                        android:background="@drawable/shape_app_widget_ffffff_r25_bg">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_weight="1.8"
                            android:background="@drawable/icon_drawable"
                            android:backgroundTint="@color/color_0263FF"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/ic_wifi" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.8"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="5">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:gravity="center|bottom|start"
                                android:text="Wi-Fi"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5"
                                android:alpha="0.6"
                                android:gravity="center|top|start"
                                android:text="On"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4.5"
                        android:background="@drawable/shape_app_widget_ffffff_r25_bg"
                        android:weightSum="5">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_weight="1.8"
                            android:background="@drawable/icon_drawable"
                            android:backgroundTint="@color/color_0263FF"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/ic_cellular" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.8"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="5">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:gravity="center|bottom|start"
                                android:text="Cellular"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5"
                                android:alpha="0.6"
                                android:gravity="center|top|start"
                                android:text="On"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
