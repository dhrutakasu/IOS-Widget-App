<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LlMediumWidget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="top|center_vertical|center_horizontal|center"
    android:layoutDirection="ltr">

    <RelativeLayout
        android:id="@+id/RlMediumCal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/IvBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_widget_calendar2_medium_bg"
            android:orientation="horizontal" />
<!--        <ImageView
            android:id="@+id/IvBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_widget_calendar2_medium_bg" />-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignStart="@+id/IvBackground"
            android:layout_alignTop="@+id/IvBackground"
            android:layout_alignEnd="@+id/IvBackground"
            android:layout_alignBottom="@+id/IvBackground"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.8"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <TextClock
                    android:id="@+id/TClockMonth"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.8"
                    android:autoSizeMaxTextSize="@dimen/_12sdp"
                    android:autoSizeMinTextSize="@dimen/_2sdp"
                    android:autoSizeTextType="uniform"
                    android:ellipsize="none"
                    android:text="Jun, 2023"
                    android:fontFamily="@font/app_medium"
                    android:format12Hour="EEEE"
                    android:format24Hour="EEEE"
                    android:paddingStart="25dp"
                    android:gravity="center|start|bottom"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textColor="@color/widget_white"
                    android:textDirection="ltr"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp" />

                <TextClock
                    android:id="@+id/TClockDate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:layout_marginTop="16dp"
                    android:autoSizeMaxTextSize="@dimen/_64sdp"
                    android:autoSizeMinTextSize="@dimen/_6sdp"
                    android:autoSizeTextType="uniform"
                    android:ellipsize="none"
                    android:fontFamily="@font/app_bold"
                    android:format12Hour="d"
                    android:format24Hour="d"
                    android:gravity="center|start"
                    android:includeFontPadding="false"
                    android:paddingStart="20dp"
                    android:singleLine="true"
                    android:text="23"
                    android:textColor="@color/widget_black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_48sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.8"
                    android:gravity="center|bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/app_semibold"
                        android:gravity="center"
                        android:text="S"
                        android:textColor="@color/widget_white"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/app_semibold"
                        android:gravity="center"
                        android:text="M"
                        android:textColor="@color/widget_white"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/app_semibold"
                        android:gravity="center"
                        android:text="T"
                        android:textColor="@color/widget_white"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/app_semibold"
                        android:gravity="center"
                        android:text="W"
                        android:textColor="@color/widget_white"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/app_semibold"
                        android:gravity="center"
                        android:text="T"
                        android:textColor="@color/widget_white"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/app_semibold"
                        android:gravity="center"
                        android:text="F"
                        android:textColor="@color/widget_white"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/app_semibold"
                        android:gravity="center"
                        android:text="S"
                        android:textColor="@color/widget_white"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />
                </LinearLayout>

                <GridView
                    android:id="@+id/GridCalendarMediumView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:numColumns="7"
                    tools:listitem="@layout/item_calendar_day" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
