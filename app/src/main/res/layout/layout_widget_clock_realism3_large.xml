<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/_40sdp"
    android:paddingEnd="@dimen/_40sdp"
    android:orientation="vertical">

    <AnalogClock
        android:id="@+id/analog_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_app_widget_1c1c1e_r25_bg"
        android:dial="@drawable/img_clock_realism3_dial"
        android:hand_hour="@drawable/img_clock_realism3_hand_hour"
        android:hand_minute="@drawable/img_clock_realism3_hand_minute"
        android:hand_second="@drawable/img_clock_realism3_hand_second" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/analog_clock"
        android:layout_alignTop="@+id/analog_clock"
        android:layout_alignEnd="@+id/analog_clock"
        android:layout_alignBottom="@+id/analog_clock"
        android:src="@drawable/img_clock_realism3_cap" />
</RelativeLayout>
