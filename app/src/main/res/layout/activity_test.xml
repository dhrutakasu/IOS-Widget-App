<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ios.widget.ui.Activity.TestActivity">

    <RelativeLayout
        android:id="@+id/RlSmallCal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_background2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/img_calendar2_small_bg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iv_background2"
            android:layout_alignTop="@+id/iv_background2"
            android:layout_alignEnd="@+id/iv_background2"
            android:layout_alignBottom="@+id/iv_background2"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="148">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="115"
                android:orientation="vertical"
                android:weightSum="148">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="30" />

                <TextClock
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="24"
                    android:autoSizeMaxTextSize="@dimen/_16sdp"
                    android:autoSizeMinTextSize="@dimen/_6sdp"
                    android:autoSizeTextType="uniform"
                    android:ellipsize="none"
                    android:fontFamily="@font/main_medium"
                    android:format12Hour="MMM"
                    android:format24Hour="MMM"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textDirection="ltr"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

                <TextClock
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="75"
                    android:autoSizeMaxTextSize="@dimen/_60sdp"
                    android:autoSizeMinTextSize="@dimen/_25sdp"
                    android:autoSizeTextType="uniform"
                    android:ellipsize="none"
                    android:fontFamily="@font/main_bold"
                    android:format12Hour="d"
                    android:format24Hour="d"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_60sdp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RlMediumCal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/RlSmallCal">

        <ImageView
            android:id="@+id/iv_background1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/img_calendar2_medium_bg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iv_background1"
            android:layout_alignTop="@+id/iv_background1"
            android:layout_alignEnd="@+id/iv_background1"
            android:layout_alignBottom="@+id/iv_background1"
            android:orientation="horizontal"
            android:weightSum="321">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="140"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="140">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="100"
                    android:orientation="vertical"
                    android:weightSum="148">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="35" />

                    <TextClock
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="18"
                        android:autoSizeMaxTextSize="@dimen/_12sdp"
                        android:autoSizeMinTextSize="@dimen/_6sdp"
                        android:autoSizeTextType="uniform"
                        android:ellipsize="none"
                        android:fontFamily="@font/main_medium"
                        android:format12Hour="MMM, yyyy"
                        android:format24Hour="MMM, yyyy"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textDirection="ltr"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />

                    <TextClock
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="75"
                        android:autoSizeMaxTextSize="@dimen/_52sdp"
                        android:autoSizeMinTextSize="@dimen/_20sdp"
                        android:autoSizeTextType="uniform"
                        android:ellipsize="none"
                        android:fontFamily="@font/main_bold"
                        android:format12Hour="d"
                        android:format24Hour="d"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_45sdp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="150"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="140">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="140"
                    android:orientation="vertical"
                    android:weightSum="148">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="35" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="20"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/main_bold"
                            android:gravity="center"
                            android:text="S"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/main_bold"
                            android:gravity="center"
                            android:text="M"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/main_bold"
                            android:gravity="center"
                            android:text="T"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/main_bold"
                            android:gravity="center"
                            android:text="W"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/main_bold"
                            android:gravity="center"
                            android:text="T"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/main_bold"
                            android:gravity="center"
                            android:text="F"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/main_bold"
                            android:gravity="center"
                            android:text="S"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8sdp" />
                    </LinearLayout>

                    <GridView
                        android:id="@+id/GridCalendarMediumView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_alignParentStart="true"
                        android:layout_weight="70"
                        android:gravity="center"
                        android:numColumns="7"
                        tools:listitem="@layout/item_calendar_day" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <!--    todo large calendar-->
    <RelativeLayout
        android:id="@+id/RlLargeCal"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RlMediumCal">

        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/img_calendar2_large_bg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iv_background"
            android:layout_alignTop="@+id/iv_background"
            android:layout_alignEnd="@+id/iv_background"
            android:layout_alignBottom="@+id/iv_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="321">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="285"
                android:orientation="vertical"
                android:weightSum="324">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="35" />

                <TextClock
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="25"
                    android:autoSizeMaxTextSize="@dimen/_16sdp"
                    android:autoSizeMinTextSize="@dimen/_2sdp"
                    android:autoSizeTextType="uniform"
                    android:ellipsize="none"
                    android:fontFamily="@font/main_medium"
                    android:format12Hour="MMM, yyyy"
                    android:format24Hour="MMM, yyyy"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textDirection="ltr"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10" />

                <TextClock
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="64"
                    android:autoSizeMaxTextSize="@dimen/_64sdp"
                    android:autoSizeMinTextSize="@dimen/_6sdp"
                    android:autoSizeTextType="uniform"
                    android:ellipsize="none"
                    android:fontFamily="@font/main_bold"
                    android:format12Hour="d"
                    android:format24Hour="d"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_48sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/main_bold"
                        android:gravity="center"
                        android:text="SUN"
                        android:textColor="@color/brown"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/main_bold"
                        android:gravity="center"
                        android:text="MON"
                        android:textColor="@color/brown"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/main_bold"
                        android:gravity="center"
                        android:text="TUE"
                        android:textColor="@color/brown"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/main_bold"
                        android:gravity="center"
                        android:text="WED"
                        android:textColor="@color/brown"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/main_bold"
                        android:gravity="center"
                        android:text="THU"
                        android:textColor="@color/brown"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/main_bold"
                        android:gravity="center"
                        android:text="FRI"
                        android:textColor="@color/brown"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/main_bold"
                        android:gravity="center"
                        android:text="SAT"
                        android:textColor="@color/brown"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>

                <GridView
                    android:id="@+id/GridCalendarLargeView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_alignParentStart="true"
                    android:layout_weight="130"
                    android:gravity="center"
                    android:numColumns="7"
                    tools:listitem="@layout/item_calendar_day" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="35" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>