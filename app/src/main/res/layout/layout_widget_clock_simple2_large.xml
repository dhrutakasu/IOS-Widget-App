<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/_40sdp"
    android:paddingEnd="@dimen/_40sdp"
    android:orientation="vertical">

    <AnalogClock
        android:id="@+id/analog_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/clock_simple2_bg"
        android:dial="@drawable/img_clock_simple2_dial"
        android:hand_hour="@drawable/img_clock_simple2_hand_hour"
        android:hand_minute="@drawable/img_clock_simple2_hand_minute"
        android:hand_second="@drawable/img_clock_simple2_hand_second" />
</RelativeLayout>
