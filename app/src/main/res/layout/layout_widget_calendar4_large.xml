<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:gravity="top|center_vertical|center_horizontal|center">

    <RelativeLayout
        android:id="@+id/RlLargeCal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_40sdp"
        android:paddingEnd="@dimen/_40sdp">

        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/shape_app_widget_1c1c1e_r25_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iv_background"
            android:layout_alignTop="@+id/iv_background"
            android:layout_alignEnd="@+id/iv_background"
            android:layout_alignBottom="@+id/iv_background"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="10">

            <TextClock
                android:id="@+id/TClockMonth"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="@dimen/_25ssp"
                android:autoSizeMinTextSize="@dimen/_2ssp"
                android:autoSizeTextType="uniform"
                android:ellipsize="none"
                android:format12Hour="MMMM yyyy"
                android:format24Hour="MMMM yyyy"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textAllCaps="true"
                android:textColor="@color/red"
                android:textDirection="ltr"
                android:textSize="@dimen/_22ssp"
                android:textStyle="bold"
                android:singleLine="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/main_semibold"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="S"
                    android:textColor="@color/color_8E8E90"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/main_semibold"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="M"
                    android:textColor="@color/color_8E8E90"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/main_semibold"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="T"
                    android:textColor="@color/color_8E8E90"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/main_semibold"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="W"
                    android:textColor="@color/color_8E8E90"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/main_semibold"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="T"
                    android:textColor="@color/color_8E8E90"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/main_semibold"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="F"
                    android:textColor="@color/color_8E8E90"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/main_semibold"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="S"
                    android:textColor="@color/color_8E8E90"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>

            <GridView
                android:id="@+id/GridCalendarLargeView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentStart="true"
                android:layout_weight="7"
                android:gravity="center"
                android:numColumns="7"
                tools:listitem="@layout/item_calendar_day" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
